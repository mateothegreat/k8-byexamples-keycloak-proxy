{
    "target-url": "http://kibana",
    "send-access-token": true,
    "bind-address": "localhost",
    "http-port": "8080",
    "applications": [
        {
            "base-path": "/",
            "error-page": "/error.html",
            "adapter-config": {
                "realm": "devops",
                "resource": "proxy",
                "realm-public-key": "MIGfMA0GCSqGSIb",
                "auth-server-url": "http://localhost:8081/auth",
                "ssl-required": "external",
                "principal-attribute": "name",
                "credentials": {
                    "secret": "password"
                }
            },
            "constraints": [
                {
                    "pattern": "/users/*",
                    "roles-allowed": ["user"]
                },
                {
                    "pattern": "/admins/*",
                    "roles-allowed": ["admin"]
                },
                {
                    "pattern": "/users/permit",
                    "permit": true
                },
                {
                    "pattern": "/users/deny",
                    "deny": true
                }
            ]
        }
    ]
}
